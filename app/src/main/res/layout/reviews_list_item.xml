<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_card_view_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/review_cardview_margin"
    android:elevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_author_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/review_author_padding"
            android:textSize="@dimen/review_author_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/review_content_padding"
            android:paddingLeft="@dimen/review_content_padding"
            android:paddingRight="@dimen/review_content_padding"
            android:paddingStart="@dimen/review_content_padding"
            android:textSize="@dimen/review_content_text_size" />

    </LinearLayout>
</android.support.v7.widget.CardView>
